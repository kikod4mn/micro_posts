<div class="media pt-3 border-bottom border-gray pb-4">
	<div class="row w-100">
		<div class="col-12">
	        <span class="d-block">
	            <a class="d-inline mx-0 px-0 text-gray-dark font-weight-bold"
	               href="{{ path('profile.by.username', {'username': post.author.username }) }}">
	                @{{ post.author.username }}
	            </a>
	            <small class="float-right light-blue-text">{{ post.createdAt|date }}</small>
	        </span>
		</div>
		<div class="row w-100">
			<div class="col-11 mx-auto p-3 mb-3 mt-4 shadow-sm">
				<p class="text-dark">{{ post.body }}</p>
			</div>
		</div>
	</div>
	<div>
		{% if post.approved %}
			<a href="{{ path('mod.post.un.approve', {'id': post.id }) }}" class="m-2 btn btn-outline-success btn-sm">Un-Approve</a>
		{% else %}
			<a href="{{ path('mod.post.approve', {'id': post.id }) }}" class="m-2 btn btn-outline-success btn-sm">Approve</a>
		{% endif %}
		
		{% if post.published %}
			<a href="{{ path('post.un.publish', {'id': post.id }) }}" class="m-2 btn btn-outline-success btn-sm">Un-Publish</a>
		{% else %}
			<a href="{{ path('post.publish', {'id': post.id }) }}" class="m-2 btn btn-outline-success btn-sm">Publish</a>
		{% endif %}
		
		{% if post.reported %}
			<a href="{{ path('mod.post.un.report', {'id': post.id }) }}" class="m-2 btn btn-outline-success btn-sm">Clear Reports</a>
		{% endif %}
		
		<a href="{{ path('post.edit', {'id': post.id }) }}" class="m-2 btn btn-outline-primary btn-sm">Edit</a>
		
		{% if post.trashed %}
			<a href="{{ path('mod.post.delete', {'id': post.id }) }}" class="m-2 btn btn-outline-danger btn-sm">Delete</a>
		{% else %}
			<a href="{{ path('post.trash', {'id': post.id }) }}" class="m-2 btn btn-outline-danger btn-sm">Trash</a>
		{% endif %}
	</div>
</div>